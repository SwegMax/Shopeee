<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RegisterFragment">

    <TextView
        android:id="@+id/text_lets_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
        app:layout_constraintBottom_toTopOf="@+id/edFirstNameRegister"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Sign up here"
        android:textColor="@color/black" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/editTextHeight"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/text_lets_sign_up"
        app:layout_constraintBottom_toTopOf="@+id/edLastNameRegister"
        style="@style/editText"
        android:layout_margin="20dp"
        android:hint="First Name"
        android:id="@+id/edFirstNameRegister" />
    
    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/editTextHeight"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/edFirstNameRegister"
        app:layout_constraintBottom_toTopOf="@+id/edEmailRegister"
        style="@style/editText"
        android:layout_margin="20dp"
        android:hint="Last Name"
        android:id="@+id/edLastNameRegister" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/editTextHeight"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/edLastNameRegister"
        app:layout_constraintBottom_toTopOf="@+id/edPasswordRegister"
        style="@style/editText"
        android:layout_margin="20dp"
        android:hint="Email"
        android:id="@+id/edEmailRegister" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="@dimen/editTextHeight"
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/edEmailRegister"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegisterRegister"
        style="@style/editText"
        android:layout_margin="20dp"
        android:hint="Password"
        android:id="@+id/edPasswordRegister"
        android:inputType="textPassword" />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/edPasswordRegister"
        style="@style/blueButtonStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/mediumButtonHeight"
        android:layout_margin="30dp"
        android:text="Sign up"
        android:id="@+id/buttonRegisterRegister" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

</androidx.constraintlayout.widget.ConstraintLayout>
